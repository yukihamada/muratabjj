# ===================================
# Murata BJJ - Environment Variables
# ===================================
# Copy this file to .env.local and fill in your values

# Supabase Configuration
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create these with: npm run setup-stripe)
# https://dashboard.stripe.com/products

# Personal Plans
STRIPE_BASIC_PRICE_ID_MONTHLY=price_your-basic-monthly-price-id
STRIPE_BASIC_PRICE_ID_YEARLY=price_your-basic-yearly-price-id
STRIPE_PRO_PRICE_ID_MONTHLY=price_your-pro-monthly-price-id
STRIPE_PRO_PRICE_ID_YEARLY=price_your-pro-yearly-price-id
STRIPE_MASTER_PRICE_ID_MONTHLY=price_your-master-monthly-price-id
STRIPE_MASTER_PRICE_ID_YEARLY=price_your-master-yearly-price-id

# Dojo Plans
STRIPE_DOJO_BASIC_PRICE_ID_MONTHLY=price_your-dojo-basic-monthly-price-id
STRIPE_DOJO_BASIC_PRICE_ID_YEARLY=price_your-dojo-basic-yearly-price-id
STRIPE_DOJO_PRO_PRICE_ID_MONTHLY=price_your-dojo-pro-monthly-price-id
STRIPE_DOJO_PRO_PRICE_ID_YEARLY=price_your-dojo-pro-yearly-price-id

# Stripe Portal Configuration
STRIPE_PORTAL_CONFIG_ID=bpc_your-portal-config-id

# OpenAI Configuration (for Whisper API and AI Analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key

# App Configuration
NEXT_PUBLIC_APP_URL=https://muratabjj.com
NEXT_PUBLIC_ADMIN_EMAIL=admin@muratabjj.com